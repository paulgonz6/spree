<%= render "spree/shared/routes" %>
<script>
  Spree.routes.variants_search = "<%= spree.api_variants_url(:format => 'json') %>";
  Spree.routes.taxons_search = "<%= spree.api_taxons_url(:format => 'json') %>";
  Spree.routes.user_search = "<%= spree.admin_search_users_url(:format => 'json') %>";
  Spree.routes.product_search = "<%= spree.admin_search_products_url(:format => 'json') %>";
  Spree.routes.option_type_search = "<%= spree.api_option_types_url(:format => 'json') %>";
  Spree.routes.option_value_search = "<%= spree.api_option_values_url(format: 'json') %>";
  Spree.routes.orders_api = "<%= spree.api_orders_url(:format => 'json') %>";
  Spree.routes.checkouts_api = "<%= spree.api_checkouts_url(:format => 'json') %>";
  Spree.routes.stock_locations_api = "<%= spree.api_stock_locations_url(:format => 'json') %>";
  Spree.routes.variants_api = "<%= spree.api_variants_url(:format => 'json') %>";
  Spree.routes.classifications_api = "<%= spree.api_classifications_url(:format => 'json') %>";
  Spree.routes.taxon_products_api = "<%= spree.api_taxon_products_url(:format => 'json') %>";
  Spree.routes.payments_api = "<%= spree.api_order_payments_url(:format => 'json') if params[:order_id] %>";
  Spree.routes.shipments_api = "<%= spree.api_shipments_url(:format => 'json') %>";
  Spree.routes.stock_items_api = function(stockLocationId) {
    return "<%= spree.api_stock_location_stock_items_url(:format => 'json', :stock_location_id => :stock_location_id) %>".replace(/stock_location_id/, stockLocationId);
  }
</script>
